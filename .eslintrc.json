{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "globals": {
    "__DEVCLIENT__": true,
    "__DEVSERVER__": true,
    "__DEVTOOLS__": true,
    "__DEVLOGGER__": true,
    "jQuery": true,
    "$": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "strict": 0,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 0,
    "no-unused-vars": ["error", {
      "vars": "all",
      "args": "none"
    }],
    "no-mixed-spaces-and-tabs": [0],
    "linebreak-styl": 0
  }
}
